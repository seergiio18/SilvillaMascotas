{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
{% include 'base.html.twig' %}
    <style>
        .form-container {
            background-color: #fff;
            border-radius: 5px;
            padding: 20px;
            margin-top: 50px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .form-container h2 {
            color: #ff9b00;
            margin-bottom: 20px;
        }
        .form-container label {
            color: #555;
        }
        .form-container .form-control {
            border-color: #ff9b00;
        }
        .form-container .btn-primary {
            background-color: #ff9b00;
            border-color: #ff9b00;
        }
        .form-container .btn-primary:hover {
            background-color: #f08500;
            border-color: #f08500;
        }
    </style>



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="form-container">
                <h2>Iniciar sesión</h2>
                {% if error %}
                    <div class="m-3">
                        <p>¡Ups! Parece que hubo un problema. Por favor, revisa tu email y contraseña e inténtalo de nuevo.</p>
                    </div>
                {% endif %}
                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <label for="username">Email <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña <span class="text-danger">*</span></label>
                        <input type="password" class="form-control" id="password" name="_password" required autocomplete="off">
                    </div>
                    {# If you want to control the URL the user is redirected to on success
                    <input type="hidden" name="_target_path" value="/"> #}

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button type="submit" class="btn btn-primary btn-block">Iniciar sesión</button>
                </form>
            </div>
        </div>
    </div>
</div>



    <div class="post"></div>
    <div class="container">
      <hr>
      <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4">
        <div class="col-md-4 d-flex align-items-center">
          <span class="mb-3 mb-md-0 text-body-secondary">© 2023 Company, Inc</span>
        </div>
    
        <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
          <li class="ms-3"><a class="text-body-secondary" href="https://www.instagram.com" target="_blank"><img class="bi" width="40" height="40" src="{{asset('img/instagram.png')}}" alt="Logo instagram"></a></li>
          <li class="ms-3"><a class="text-body-secondary" href="https://twitter.com" target="_blank"><img class="bi" width="40" height="40" src="{{asset('img/gorjeo.png')}}" alt="Logo twitter"></img></a></li>
          <li class="ms-3"><a class="text-body-secondary" href="https://www.facebook.com" target="_blank"><img class="bi" width="40" height="40" src="{{asset('img/facebook.png')}}" alt="Logo facebook"></img></a></li>
        </ul>
      </footer>
    </div>
{% endblock %}



