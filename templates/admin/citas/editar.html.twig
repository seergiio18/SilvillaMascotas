{% extends 'base.html.twig' %}

{% block title %}
    <title>Silvilla Mascotas-Administrador</title>
{% endblock %}

{% block body %}
{% include 'base.html.twig' %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
                    <h1 class="text-center mb-4">Crear Cita</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
                    <div class="form-group">
                        Tiendas
                        {{ form_widget(form.tienda, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        Fecha
                        {{ form_widget(form.fecha, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        Servicio
                        {{ form_widget(form.servicio, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        Cliente
                        {{ form_widget(form.cliente, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        Teléfono
                        {{ form_widget(form.telefono, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        Horas
                        {{ form_widget(form.horas, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        Descripción
                        {{ form_widget(form.descripcion, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <button type="submit" class="btn btn-primary">Editar Cita</button>
                    {{ form_end(form) }}
                    <a href="{{ path('admin_citas') }}" class="btn btn-danger mt-3">Volver</a>
                </div>
            </div>
</div>
<div class="mt-5"></div>
    <div class="container">
      <hr>
      <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4">
        <div class="col-md-4 d-flex align-items-center">
          <span class="mb-3 mb-md-0 text-body-secondary">© 2023 Company, Inc</span>
        </div>
    
        <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
          <li class="ms-3"><a class="text-body-secondary" href="https://www.instagram.com/silvillamascotas" target="_blank"><img class="bi" width="40" height="40" src="{{asset('img/instagram.png')}}" alt="Logo instagram"></a></li>
          <li class="ms-3"><a class="text-body-secondary" href="https://twitter.com" target="_blank"><img class="bi" width="40" height="40" src="{{asset('img/gorjeo.png')}}" alt="Logo twitter"></img></a></li>
          <li class="ms-3"><a class="text-body-secondary" href="https://www.facebook.com" target="_blank"><img class="bi" width="40" height="40" src="{{asset('img/facebook.png')}}" alt="Logo facebook"></img></a></li>
        </ul>
      </footer>
    </div>
{% endblock %}
{% block javascripts %}
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="{{asset('js/javascript.js')}}"></script>
  <script src="{{asset('js/bootstrap.bundle.js')}}"></script>
{% endblock %}