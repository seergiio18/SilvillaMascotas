{% extends 'base.html.twig' %}

{% block title %}Citas index{% endblock %}

{% block body %}
    <h1>Citas index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Servicio</th>
                <th>Cliente</th>
                <th>Telefono</th>
                <th>Horas</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cita in citas %}
            <tr>
                <td>{{ cita.id }}</td>
                <td>{{ cita.fecha ? cita.fecha|date('Y-m-d') : '' }}</td>
                <td>{{ cita.servicio }}</td>
                <td>{{ cita.cliente }}</td>
                <td>{{ cita.telefono }}</td>
                <td>{{ cita.horas }}</td>
                <td>{{ cita.descripcion }}</td>
                <td>
                    <a href="{{ path('app_citas_show', {'id': cita.id}) }}">show</a>
                    <a href="{{ path('app_citas_edit', {'id': cita.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_citas_new') }}">Create new</a>
{% endblock %}
