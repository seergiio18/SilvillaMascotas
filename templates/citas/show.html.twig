{% extends 'base.html.twig' %}

{% block title %}Citas{% endblock %}

{% block body %}
    <h1>Citas</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cita.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ cita.fecha ? cita.fecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Servicio</th>
                <td>{{ cita.servicio }}</td>
            </tr>
            <tr>
                <th>Cliente</th>
                <td>{{ cita.cliente }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ cita.telefono }}</td>
            </tr>
            <tr>
                <th>Horas</th>
                <td>{{ cita.horas }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ cita.descripcion }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_citas_index') }}">back to list</a>

    <a href="{{ path('app_citas_edit', {'id': cita.id}) }}">edit</a>

    {{ include('citas/_delete_form.html.twig') }}
{% endblock %}
